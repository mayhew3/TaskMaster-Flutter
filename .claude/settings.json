{
  "allow": [
    "Bash(flutter test:*)",
    "Bash(flutter pub run build_runner build:*)",
    "Bash(git add:*)",
    "Bash(git commit:*)",
    "Bash(mcp__atlassian)",
    "Bash(dart analyze:*)",
    "Bash(flutter pub get:*)",
    "Bash(flutter analyze:*)"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          { "type": "command", "command": "powershell -NoProfile -File .claude/hooks/validate-commit-message.ps1" },
          { "type": "command", "command": "powershell -NoProfile -File .claude/hooks/task-test-gate.ps1" },
          { "type": "command", "command": "powershell -NoProfile -File .claude/hooks/task-push-gate.ps1" },
          { "type": "command", "command": "powershell -NoProfile -File .claude/hooks/jira-done-gate.ps1" }
        ]
      },
      {
        "matcher": "mcp__atlassian__transitionJiraIssue",
        "hooks": [
          { "type": "command", "command": "powershell -NoProfile -File .claude/hooks/jira-done-gate.ps1" }
        ]
      }
    ]
  }
}
